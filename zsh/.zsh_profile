alias cdd="cd ~/Documents" 
alias cdh="cd ~/.config" 


alias k='kubectl'
alias age_key="cat $SOPS_AGE_KEY_FILE | grep -o 'public key:[^\"]*' | cut -d ':' -f 2 | xargs"

alias gdoc="godoc -http=:6060"

alias cfd=". fzf_cd"
